{
  "name": "@adobe/aem-uswds-boilerplate",
  "private": true,
  "version": "1.0.0",
  "description": "USWDS integrated with AEM Edge Delivery Services",
  "scripts": {
    "build:uswds": "node scripts/build-uswds.js",
    "build:uswds:clean": "node scripts/build-uswds.js --clean",
    "build:uswds:component": "node scripts/build-uswds.js --component=",
    "upgrade:uswds": "npm update @uswds/uswds && npm run build:uswds",
    "lint:js": "eslint .",
    "lint:css": "stylelint 'blocks/**/*.css' 'styles/*.css'",
    "lint": "npm run lint:js && npm run lint:css",
    "build:json": "npm-run-all -p build:json:models build:json:definitions build:json:filters",
    "build:json:models": "merge-json-cli -i \"ue/models/component-models.json\" -o \"component-models.json\"",
    "build:json:definitions": "merge-json-cli -i \"ue/models/component-definition.json\" -o \"component-definition.json\"",
    "build:json:filters": "merge-json-cli -i \"ue/models/component-filters.json\" -o \"component-filters.json\"",
    "prepare": "husky",
    "test": "echo \"Tests not yet implemented\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/aem-uswds-boilerplate.git"
  },
  "keywords": [
    "aem",
    "eds",
    "edge-delivery-services",
    "uswds",
    "design-system",
    "government",
    "accessibility",
    "wcag",
    "section-508"
  ],
  "author": "Your Organization",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/your-org/aem-uswds-boilerplate/issues"
  },
  "homepage": "https://github.com/your-org/aem-uswds-boilerplate#readme",
  "dependencies": {
    "@uswds/uswds": "^3.13.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.24.8",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.1",
    "stylelint": "16.7.0",
    "stylelint-config-standard": "36.0.1",
    "husky": "^9.1.7",
    "merge-json-cli": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "sass": "^1.70.0",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "chalk": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
